{% extends '@Layout/Page/Default/information.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/Folder/showing/show.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {% if folder.childs is defined and folder.childs is not empty %}
        <div class="folders">
            {% for subFolder in folder.childs %}
                <div class="folder-item">
                    {% if subFolder is instanceof('AppBundle\\Entity\\File') %}
                        <div class="folder-svg">
                            <a href="{{ path('app_file_showing_show_public', {'id': subFolder.id, 'token': token}) }}">
                                <img src="{{ asset('assets/image/File/Text_file.svg') }}">
                            </a>
                        </div>
                        <div class="folder-title">{{ subFolder.name }}</div>
                    {% else %}
                        <div class="folder-svg">
                            <a href="{{ path('app_folder_showing_show_public', {'id': subFolder.id, 'token': token}) }}">
                                <img src="{{ asset('assets/image/Folder/Folder.svg') }}" width="100px;">
                            </a>
                        </div>
                        <div class="folder-title">{{ subFolder.name }}</div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}